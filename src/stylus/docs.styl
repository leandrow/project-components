@import "../prism/prism.css"

// Components
.components-group
	padding: 48px
	background-color: rgb(248,249,250)
	h3
		margin: 0 0 16px
		line-height: 1.2

.component-box
	position: relative
	background-color: white
	margin-bottom: 48px
	.component-item
		padding: 24px
		margin-right: 15px
	.code-block
		position: relative
		display: none
		pre
			font-size: 13px
			margin: 0
			border-radius: 0
		.btn-copy
			position: absolute
			top: 8px
			right: 8px

// Icon
.icon-show-code
	background: url('/img/code.svg') center no-repeat
	background-size: 20px
	display: block
	width: 30px
	height: 20px
	line-height: 1
	opacity: .3
	position: absolute
	top: 8px
	right: 8px
	cursor: pointer
	&:hover,
	&.icon-active
		transition: .2s ease
		opacity: .7
